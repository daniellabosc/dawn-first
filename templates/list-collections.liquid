<div class="container">
    <div class="card">
       
        <h2 class="header-block">Collections</h2>
        <div class="card-body">
            <div class="row">
            {% for collection in collections %}
                <a href="/collections/{{collection.title | downcase }}">
                    <div class="col-4">
                        <div class="card-body collection-block" style="background-image:url({{ collection.featured_image | image_url }})">
                            <div>
                                <h1>{{collection.title}}</h1>
                            </div>
                    </div>
                </a>
            </div>
            {% endfor %}
        </div>
        </div>
    </div>
</div>