<div class="container row">
  {% for item in product.images %}
    <div class="col-3 card">
      <div class="card-body">
        <img src="{{item | image_url}}" alt="product image" class="img-thumbnail">
      </div>
    </div>
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Slideshow",
    "tag": "section",
    "class": "slideshow",
    "settings": [
      {
        "type": "text",
        "id": "header",
        "label": "Header"
      }, {
        "type": "select",
        "id": "vertical_alignment",
        "label": "Vertical alignment",
        "options": [
          {
            "value": "top",
            "label": "Top"
          }, {
            "value": "middle",
            "label": "Middle"
          }, {
            "value": "bottom",
            "label": "Bottom"
          }
        ],
        "default": "middle"
      }
    ]
  }
{% endschema %}}}}