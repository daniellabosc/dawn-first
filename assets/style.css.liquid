a, a:hover {
    color: {{ settings.text-dark }};
    text-decoration: none;
    background-color: transparent;
}
body, .container, .card{
    background-color: {{ settings.background-primary }};
    color: {{ settings.text-dark }};
}
.card{
    background-color: {{ settings.background-secondary }};
    color: {{ settings.text-dark }};
}
.card-header, .card-footer{
    background-color: {{ settings.background-secondary }};
    color: {{ settings.text-dark }};
}
.container-box{
    color: {{ settings.text-dark }};
} 
.header-block{
    padding:20px;
    background-color: {{ settings.background-primary }};
    color: {{ settings.accent-one }};
    border:none
}
hr{
    background-color: {{ settings.accent-one }};
    height:2px
}
.collection-block{
    background-color: {{ settings.background-primary }};
    color: {{ settings.accent-one }};
    display:flex;
    flex-direction:row;
    align-items:flex-start;
    jusify-content:flex-start;
    height:60vh;
    background-repeat:no-repeat;
    background-size:cover;
}
.btn{
    margin:0 3px;
}
.btn-large{
    width:100%
} 
.btn-primary{
    background-color: {{ settings.accent-one }};
}
input[type="search"]{
    border: 1px solid {{ settings.accent-one }};
    border-radius:6px;
    padding:4px;
    height:39px;
}
input[type="number"]{
    border: 1px solid {{ settings.text-dark }};
    border-radius:6px;
    padding:4px;
    height:36px;
    width: 64px;
}
.image-anchor{
    width:280px;
    height:280px;
    background-repeat:no-repeat;
}
.product-separator{
    width:100%;
}
.card-footer{
    border:none;
}